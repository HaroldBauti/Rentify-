<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPropertiesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_header"
            android:backgroundTint="@color/blue">

            <ImageButton
                android:id="@+id/btn_back_my_properties"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/ic_back"
                android:onClick="btnBackMyProperties_Click"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/lb_p_title_my_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis propiedades"
                android:textColor="@color/sky_blue_3"
                android:textSize="18dp"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/list_my_property_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:padding="10dp">


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>