<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight=".1"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        android:backgroundTint="@color/blue"
        android:gravity="center_vertical"
        android:paddingHorizontal="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mas"
            android:textColor="@color/sky_blue_3"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight=".9"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:paddingHorizontal="10sp"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="30sp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/sky_blue_3"
            android:elevation="10sp">

            <LinearLayout
                android:id="@+id/more_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:text="Mi cuenta"
                    android:textColor="@color/sky_blue_3"
                    android:textSize="18sp"
                    android:onClick="btnAccount_Click"
                    android:layout_marginBottom="10sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:text="Terminos y condiciones"
                    android:textColor="@color/sky_blue_3"
                    android:textSize="18sp"
                    android:onClick="btnTYC_Click"
                    android:layout_marginBottom="10sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:text="Politica de privacidad"
                    android:textColor="@color/sky_blue_3"
                    android:textSize="18sp"
                    android:onClick="btnPolicy_Click"
                    android:layout_marginBottom="10sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:text="Acerca de"
                    android:textColor="@color/sky_blue_3"
                    android:textSize="18sp"
                    android:onClick="btnAbout_Click"
                    android:layout_marginBottom="10sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:text="Cerrar sesiÃ³n"
                    android:textColor="@color/sky_blue_3"
                    android:textSize="18sp"
                    android:onClick="btnLogout_Click"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>